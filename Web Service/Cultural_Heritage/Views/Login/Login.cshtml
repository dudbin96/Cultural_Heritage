@model Cultural_Heritage.Models.Login
@{
    ViewBag.Title = "관리자 로그인";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div style="text-align: center; margin-top: 50px;">
    <h2><strong>관리자 페이지</strong></h2>
    <h5>로그인 후 이용 가능 합니다.</h5>

    <div style="border: 1px solid #ccc; padding: 30px; width: 400px; height: 250px; margin: 0 auto;">
        @using (Html.BeginForm("Loginpost", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="id" style="float: left;">아이디:</label>
                <div style="text-align: left;">
                    @Html.TextBoxFor(m => m.id, new { @class = "form-control", placeholder = "ID" })
                </div>
            </div>

            <div class="form-group">
                <label for="password" style="float: left;">비밀번호:</label>
                <div style="text-align: left;">
                    @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "PASSWORD" })
                </div>
            </div>

            <label class="form-check-label" style="float: left; padding-top: 10px;">
                <input class="form-check-input" type="checkbox" name="remember"> 아이디 저장
            </label>

            <div style="text-align: left; padding-top: 40px;">
                <button type="submit" class="btn btn-warning">로그인</button>
            </div>
        }
    </div>
</div>